<h1>Sign In</h1>

<%= form_with url: sign_in_path, local:true do |form| %>
	<div class="mb-3">
		<%= form.label :email %>
		<%= form.text_field :email, class: "form-control", placeholder: "janedoe@email.com" %>
	</div>
	<div class="mb-3">
		<%= form.label :password %>
		<%= form.password_field :password, class: "form-control", placeholder: "Password" %>
	</div>
	<!-- if you put "Sign In" you change the name of the button, originally Ruby automatically puts "Save" -->
	<div class="mb-3">
		<%= form.submit "Sign In", class: "btn btn-primary" %> 
	</div>
<% end %>